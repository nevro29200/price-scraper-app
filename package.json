{
  "name": "price-scraper-app",
  "version": "1.0.0",
  "description": "Application de scraping de prix avec mise Ã  jour Google Sheets",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "scraping",
    "price",
    "google-sheets",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "playwright": "^1.40.0",
    "user-agents": "^1.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-playwright-preset": "^4.0.0"
  },
  "build": {
    "appId": "com.pricescraper.app",
    "productName": "Price Scraper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    }
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
